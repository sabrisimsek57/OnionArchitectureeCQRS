@using Application.Dtos.AboutDto;
@model List<ResultAboutDto>

<div class="container-xxl py-6">
    <div class="container">
        <div class="row g-5">
             @foreach(var item in Model )
            {
                       
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="position-relative overflow-hidden ps-5 pt-5 h-100" style="min-height: 400px;">
                    <img class="position-absolute w-100 h-100" src="@item.AboutPhoto1" alt="" style="object-fit: cover;">
                    <img class="position-absolute top-0 start-0 bg-white pe-3 pb-3" src="@item.AboutPhoto2" alt="" style="width: 200px; height: 200px;">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="h-100">
                    
                   
                    <h6 class="text-primary text-uppercase mb-2">Hakkımızda</h6>
                    <h1 class="display-6 mb-4">@item.AboutTitle</h1>
                    <p>@item.AboutDescription</p>
                    <div class="row g-2 mb-4 pb-2">
                        <div class="col-sm-6">
                            <i class="fa fa-check text-primary me-2"></i>@item.Aboutfeature1
                        </div>
                        <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@item.Aboutfeature2
                        </div>
                        <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@item.Aboutfeature3
                        </div>
                        <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@item.Aboutfeature4
                        </div>
                    </div>
                    <div class="row g-4">
                        <div class="col-sm-6">
                            <a class="btn btn-primary py-3 px-5" href="">Ana Sayfa</a>
                        </div>
                        <div class="col-sm-6">
                            <a class="d-inline-flex align-items-center btn btn-outline-primary border-2 p-2" href="tel:+2125002004">
                                <span class="flex-shrink-0 btn-square bg-primary">
                                    <i class="fa fa-phone-alt text-white"></i>
                                </span>
                                <span class="px-3">+212 500 2004</span>
                            </a>
                        </div>

                    </div>
                   
                </div>
            </div>
           }
        </div>
    </div>
</div>
